extends layout

block scripts
    script.
        $(function () {
            $('#shell1').shotgunConsole('shell1');
            $('#shell2').shotgunConsole('shell2');
        });

block styles
    style.
        .console {
            border: solid 1px #555;
            border-radius: 10px;
            padding: 15px;
            width: 1000px;
        }
        .green {
            color: #0f0;
        }
        .blue {
            color: #00f;
        }

block content
    h3 Welcome to the shotgun web console example application! Type "help" to continue.
    h3.green shell1:
    div#shell1.console.green
    h3.blue shell2:
    div#shell2.console.blue